<head>
    <%= stylesheet_link_tag 'anew', media: 'all', 'data-turbolinks-track': 'reload' %>
</head>

<%= form_for(@association, html: { class: 'match-form', role: 'form' }) do |f| %>
  <div class="match-form__container">

    <!-- Q1 -->
    <fieldset class="qblock">
      <legend class="qblock__legend">
         あなたが最も関心を持っているテーマはどれですか？
      </legend>

      <div class="options-grid options-grid--3">
        <label class="option">
          <%= f.radio_button :question1, "1", id: "q1_1", class: "option__control", required: true %>
          <span class="option__label">保健・医療・福祉</span>
        </label>
        <label class="option">
          <%= f.radio_button :question1, "2", id: "q1_2", class: "option__control" %>
          <span class="option__label">社会教育</span>
        </label>
        <label class="option">
          <%= f.radio_button :question1, "3", id: "q1_3", class: "option__control" %>
          <span class="option__label">まちづくり</span>
        </label>
        <label class="option">
          <%= f.radio_button :question1, "4", id: "q1_4", class: "option__control" %>
          <span class="option__label">観光振興</span>
        </label>
        <label class="option">
          <%= f.radio_button :question1, "5", id: "q1_5", class: "option__control" %>
          <span class="option__label">農山漁村・中山間地域</span>
        </label>
        <label class="option">
          <%= f.radio_button :question1, "6", id: "q1_6", class: "option__control" %>
          <span class="option__label">学術・文化・芸術・スポーツ</span>
        </label>
        <label class="option">
          <%= f.radio_button :question1, "7", id: "q1_7", class: "option__control" %>
          <span class="option__label">環境保全</span>
        </label>
        <label class="option">
          <%= f.radio_button :question1, "8", id: "q1_8", class: "option__control" %>
          <span class="option__label">災害救援</span>
        </label>
        <label class="option">
          <%= f.radio_button :question1, "9", id: "q1_9", class: "option__control" %>
          <span class="option__label">地域安全</span>
        </label>
        <label class="option">
          <%= f.radio_button :question1, "10", id: "q1_10", class: "option__control" %>
          <span class="option__label">人権擁護・平和推進</span>
        </label>
        <label class="option">
          <%= f.radio_button :question1, "11", id: "q1_11", class: "option__control" %>
          <span class="option__label">国際協力</span>
        </label>
        <label class="option">
          <%= f.radio_button :question1, "12", id: "q1_12", class: "option__control" %>
          <span class="option__label">男女共同参画</span>
        </label>
        <label class="option">
          <%= f.radio_button :question1, "13", id: "q1_13", class: "option__control" %>
          <span class="option__label">子どもの健全育成</span>
        </label>
        <label class="option">
          <%= f.radio_button :question1, "14", id: "q1_14", class: "option__control" %>
          <span class="option__label">情報化社会</span>
        </label>
        <label class="option">
          <%= f.radio_button :question1, "15", id: "q1_15", class: "option__control" %>
          <span class="option__label">科学技術振興</span>
        </label>
        <label class="option">
          <%= f.radio_button :question1, "16", id: "q1_16", class: "option__control" %>
          <span class="option__label">経済の活性化</span>
        </label>
        <label class="option">
          <%= f.radio_button :question1, "17", id: "q1_17", class: "option__control" %>
          <span class="option__label">職業能力開発</span>
        </label>
        <label class="option">
          <%= f.radio_button :question1, "18", id: "q1_18", class: "option__control" %>
          <span class="option__label">消費者保護</span>
        </label>
        <label class="option">
          <%= f.radio_button :question1, "19", id: "q1_19", class: "option__control" %>
          <span class="option__label">活動の連絡・助言・援助</span>
        </label>
      </div>
    </fieldset>

    <!-- Q2 -->
    <fieldset class="qblock">
      <legend class="qblock__legend">
         どんな世代の人たちと活動したいですか？
      </legend>
      <div class="options-grid options-grid--3">
        <label class="option">
          <%= f.radio_button :question2, "1", id: "q2_1", class: "option__control", required: true %>
          <span class="option__label">学生や若者がいる</span>
        </label>
        <label class="option">
          <%= f.radio_button :question2, "2", id: "q2_2", class: "option__control" %>
          <span class="option__label">経験豊富なベテランがいる</span>
        </label>
        <label class="option">
          <%= f.radio_button :question2, "3", id: "q2_3", class: "option__control" %>
          <span class="option__label">特にこだわらない</span>
        </label>
      </div>
    </fieldset>

    <!-- Q3 -->
    <fieldset class="qblock">
      <legend class="qblock__legend">
         年会費はどれくらいなら参加したいですか？
      </legend>
      <div class="options-grid options-grid--3">
        <label class="option">
          <%= f.radio_button :question3, "1", id: "q3_1", class: "option__control", required: true %>
          <span class="option__label">無料</span>
        </label>
        <label class="option">
          <%= f.radio_button :question3, "2", id: "q3_2", class: "option__control" %>
          <span class="option__label">1円〜6,000円（月500円まで）</span>
        </label>
        <label class="option">
          <%= f.radio_button :question3, "3", id: "q3_3", class: "option__control" %>
          <span class="option__label">6,000円より高い</span>
        </label>
      </div>
    </fieldset>

    <!-- Q4 -->
    <fieldset class="qblock">
      <legend class="qblock__legend">
         どのような規模の団体と関わりたいですか？
      </legend>
      <div class="options-grid options-grid--3">
        <label class="option">
          <%= f.radio_button :question4, "1", id: "q4_1", class: "option__control", required: true %>
          <span class="option__label">身近でアットホーム（予算：50万円未満）</span>
        </label>
        <label class="option">
          <%= f.radio_button :question4, "2", id: "q4_2", class: "option__control" %>
          <span class="option__label">安定的に活動（予算：50万〜500万円未満）</span>
        </label>
        <label class="option">
          <%= f.radio_button :question4, "3", id: "q4_3", class: "option__control" %>
          <span class="option__label">幅広く活動（予算：500万円以上）</span>
        </label>
      </div>
    </fieldset>

    <!-- Submit -->
    <div class="submit-wrap">
      <%= f.submit "診断結果を見る", class: "btn btn--primary" %>
    </div>

    <!-- （任意）エラーメッセージ -->
    <% if @association && @association.errors.any? %>
      <div class="form-errors" role="alert" aria-live="polite">
        <p><strong>入力内容をご確認ください。</strong></p>
        <ul>
          <% @association.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

  </div>
<% end %>